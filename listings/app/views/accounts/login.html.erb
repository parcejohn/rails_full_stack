<h1 class="page-header">Login</h1>
<%= form_tag authenticate_url, :class => "form-horizontal" do %>
	<div class="form-group">
		<div class="col-sm-2">
			<%= label_tag :email, 'Email Address' %>
		</div>
		<div class="col-sm-6">
			<%= email_field_tag :email, "", :class => 'form-control', :autofocus => "autofocus" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<%= label_tag :password, 'Password' %>
		</div>
		<div class="col-sm-6">
			<%= password_field_tag :password, "", :class => 'form-control', :autofocus => "autofocus" %>
		</div>
	</div>
	<%= submit_tag 'Log In', :class => 'btn btn-primary btn-md' %>
<% end %>