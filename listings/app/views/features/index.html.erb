<h1 class="page-heading">All Features
<small><%=@listing.title %></small>
</h1>
<div class="row">
	<div class="col-md-12">
		<%= link_to 'New', new_listing_feature_path, {class: 'btn btn-primary btn-md'} %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<% if @features.length == 0 %>
			<p class="lead">No features found </p>
		<% else %>
			<table class="table table-bordered table-striped table-responsive">
				<thead>
					<tr>
						<td>Description</td>
						<td></td>
						<td></td>
					</tr>
				</thead>
				<tbody>
				<% @features.each do |feature| %>
					<tr>
						<td><%= feature.description %></td>
						<td><%= link_to 'Edit', edit_listing_feature_path(@listing, feature)  %></td>
						<td><%= link_to 'Delete', [@listing, feature], method:delete, data:{confirm: 'Are you sure?'} %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>
