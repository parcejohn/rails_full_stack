<%= form_for @user, :html => {class: 'form-horizontal'} do |f| %>
<% if @user.errors.any? %>
	<div class="form-group">
		<div id="error-explanation">
		<h3>
			<%= pluralize(@user.errors.count, "error") %>
			prohibited this user from being saved.
		</h3>
		</div>
	</div>
<% end %>

	<div class='form-group'>
		<div class="control-label col-md-2">
			<%= f.label :firstname %>
		</div>
		<div class="col-md-6">
			<%= f.text_field :firstname, {:class => 'form-control input-md'} %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-md-2">
			<%= f.label :lastname %>
		</div>
		<div class="col-md-10">
			<%= f.text_field :lastname, {:class => 'form-control input-md'} %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-md-2">
			<%= f.label :email %>
		</div>
		<div class="col-md-2">
			<%= f.text_field :email, {:class => 'form-control input-md'} %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-md-2">
			<%= f.label :password %>
		</div>
		<div class="col-md-2">
			<%= f.password_field :password, {:class => 'form-control input-md'} %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-md-2">
			<%= f.label :usertype %>
		</div>
		<div class="col-md-2">
			<%= f.text_field :usertype, {:class => 'form-control input-md'} %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-12 text-center">
			<%= f.submit "Save", class: 'btn btn-danger btn-md' %>
		</div>
	</div>
<% end %>