<h1 class="page-heading">All Pictures
<small><%=@listing.title %></small>
</h1>
<div class="row">
	<div class="col-md-12">
		<%= link_to 'New', new_user_listing_picture_path(@user), {class: 'btn btn-primary btn-md'} %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<% if @pictures.length == 0 %>
			<p class="lead">No pictures found </p>
		<% else %>
			<table class="table table-bordered table-striped table-responsive">
				<thead>
					<tr>
						<td>Title</td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
				</thead>
				<tbody>
				<% @pictures.each do |picture| %>
					<tr>
						<td><%= picture.title %></td>
						<td><%= link_to 'Show', listing_picture_path(@listing, picture)  %></td>
						<td><%= link_to 'Edit', edit_listing_picture_path(@listing, picture)  %></td>
						<td><%= link_to 'Delete', [@listing, picture], method: :delete, data:{confirm: 'Are you sure?'} %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>
